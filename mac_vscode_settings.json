{
    "workbench.colorTheme": "Eva Light Bold",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.enablePreview": false,
    "editor.fontSize": 20,
    "[python]": {
        "editor.formatOnType": true
    },
    "explorer.confirmDelete": false,
    "editor.minimap.enabled": false,
    "go.toolsManagement.autoUpdate": true,
    "Codegeex.Privacy": true,
    "Codegeex.Comment.LanguagePreference": "English",
    "window.titleBarStyle": "custom",
    "terminal.integrated.gpuAcceleration": "off",
    "workbench.colorCustomizations": {
        "[Relax Light]": {
            "editor.background": "#fffae8"
        }
    },
    "markdown-pdf.displayHeaderFooter": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editorAssociations": {
        "*.aml": "default"
    },
    "git.openRepositoryInParentFolders": "never",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.surround": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "before": ["K"],
            "commands": ["lineBreakInsert"],
            "silent": true
        },
        { 
            "before": ["leader", "c"], 
            "commands": ["editor.action.commentLine"] 
        },
        {
            "before": ["leader", "w"],
            "commands": [ "workbench.action.files.save" ]
        },
        {
            "before": [ "<Leader>", "<Leader>", "b" ],
            "after": [ "leader", "leader", "leader", "b", "d", "w" ]
        },
        {
            "before": [ "<S-h>" ],
            "commands": [ ":bprevious" ]
        },
        {
            "before": [ "<S-l>" ],
            "commands": [ ":bnext" ]
        },
        { 
            "before": ["leader", "v"], 
            "commands": [":vsplit"]
        },
        { 
            "before": ["leader", "s"], 
            "commands": [":split"] 
        },
        { 
            "before": ["leader", "o"], 
            "commands": ["workbench.action.quickOpen"] 
        },
        { 
            "before": ["leader", "f"], 
            "commands": ["editor.action.formatDocument"] 
        },
        {
            "before": [ "leader", "h" ],
            "commands": [ "workbench.action.focusLeftGroup" ]
        },
        {
            "before": [ "leader","j" ],
            "commands": [ "workbench.action.focusBelowGroup" ]
        },
        {
            "before": [ "leader", "k" ],
            "commands": [ "workbench.action.focusAboveGroup" ]
        },
        {
            "before": [ "leader", "l" ],
            "commands": [ "workbench.action.focusRightGroup" ]
        },
        {
            "before": [ "<Leader>", "t", "t" ],
            "commands": [ ":tabnew" ]
        },
        {
            "before": [ "<Leader>", "t", "n" ],
            "commands": [ ":tabnext" ]
        },
        {
            "before": [ "<Leader>", "t", "p" ],
            "commands": [ ":tabprev" ]
        },
        {
            "before": [ "<Leader>", "t", "o" ],
            "commands": [ ":tabo" ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [ "g", "p", "d" ],
            "commands": [ "editor.action.peekDefinition" ]
        },
        {
            "before": [ "g", "i"
            ],
            "commands": [ "editor.action.goToImplementation" ]
        },
        {
            "before": [ "g", "p", "i" ],
            "commands": [ "editor.action.peekImplementation" ]
        },
        {
            "before": [ "g", "q" ],
            "commands": [ "editor.action.quickFix" ]
        },
        {
            "before": [ "g", "r" ],
            "commands": [ "editor.action.referenceSearch.trigger" ]
        },
        {
            "before": [ "g", "t" ],
            "commands": [ "editor.action.goToTypeDefinition" ]
        },
        {
            "before": [ "g", "p", "t"
            ],
            "commands": [ "editor.action.peekTypeDefinition" ]
        },
        {
            "before": [ "g", "]" ],
            "commands": [ "editor.action.marker.next" ]
        },
        {
            "before": [ "g", "[" ],
            "commands": [ "editor.action.marker.previous" ]
        },
        {
            "before": [ "g", "D" ],
            "commands": [ "editor.action.diagnosticsTrigger"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["J"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": [ ">" ],
            "commands": [ "editor.action.indentLines" ]
        },
        {
            "before": [ "<" ],
            "commands": [ "editor.action.outdentLines" ]
        },
        { 
            "before": ["leader", "c"], 
            "commands": ["editor.action.commentLine"] 
        }
    ],
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    }
}